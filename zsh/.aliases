alias mpv="mpv --hwdec=auto-safe"
# Hide the album art for audiobooks, etc
alias mpva="mpv --hwdec=auto-safe --no-audio-display"
alias p="proxychains -q"
# Because Pipewire? This makes A. work better
alias audacity="env PULSE_LATENCY_MSEC=30 audacity"
alias sudo="sudo -v; sudo "
alias sudodiff="VISUAL='nvim -d' sudoedit"

# Pacman
# # from https://wiki.archlinux.org/title/Pacman/Pacnew_and_Pacsave
alias pacman-find-pacnew-pacsave='find /etc -regextype posix-extended -regex ".+\.pac(new|save)" 2> /dev/null'
