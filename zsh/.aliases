# GIT
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gd="git diff HEAD"

alias ls="ls -F"
alias lt="ls -ctr | tail -n 5"

alias yt-dlplaylist="yt-dlp -o \"%(playlist_index)s - %(title)s.%(ext)s\""
alias youtube-cover="youtube-dl --write-thumbnail --playlist-items 1 --skip-download -o \"cover.%(ext)s\""
