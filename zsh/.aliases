alias hotspot="sudo create_ap -n --ieee80211n --ieee80211ac wlan0 ИНОАГЕНТ blagodat"
alias cairpods="echo -e \"connect D0:65:44:5F:AB:C2\" | bluetoothctl && sleep 5 && pactl set-default-sink bluez_output.D0_65_44_5F_AB_C2.a2dp-sink"
alias dairpods="echo -e \"disconnect D0:65:44:5F:AB:C2\" | bluetoothctl"
