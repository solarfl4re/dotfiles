#alias audacity="QT_SCALE_FACTOR=2 audacity"
#alias xournalpp="GDK_SCALE=2 GDK_DPI_SCALE=0.5 xournalpp"
alias hotspot="sudo create_ap -n --ieee80211n --ieee80211ac wlan0 ИНОАГЕНТ blagodat"
